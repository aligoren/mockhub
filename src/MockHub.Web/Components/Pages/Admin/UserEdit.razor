        font-size: 2rem;
    }

    .user-details h2 {
        margin: 0 0 0.25rem;
        font-size: 1.5rem;
    }

    .user-details p {
        margin: 0 0 0.75rem;
        color: var(--text-muted);
    }

    .user-badges {
        display: flex;
        gap: 0.5rem;
    }

    .info-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .info-item {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .info-label {
        font-size: 0.75rem;
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .info-value {
        font-weight: 500;
    }

    .action-buttons {
        display: flex;
        gap: 0.75rem;
    }

    .empty-state-small {
        padding: 2rem;
        text-align: center;
        color: var(--text-muted);
    }

    .modal-backdrop {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
