@page "/Admin/Users/{UserId}"
@rendermode InteractiveServer
@using MockHub.Application.DTOs.User
@using MockHub.Application.DTOs.Team
@using MockHub.Application.Interfaces
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject IUserService UserService
@inject ITeamService TeamService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>@(user?.FullName ?? "Kullanıcı") - MockHub</PageTitle>

<div class="page-header">
    <div>
        <div class="breadcrumb">
            <a href="/Admin/Users" class="btn btn-sm btn-outline">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="19" y1="12" x2="5" y2="12"/>
                    <polyline points="12 19 5 12 12 5"/>
                </svg>
            </a>
        </div>
        <h1 class="page-title">@(user?.FullName ?? "Kullanıcı Detayı")</h1>
        <p class="page-description">@user?.Email</p>
    </div>
</div>

@if (!isAdmin)
{
    <div class="alert alert-danger">
        Bu sayfaya erişim yetkiniz yok.
    </div>
}
else if (loading)
{
    <div class="loading-container">
        <div class="spinner"></div>
    </div>
}
else if (user == null)
{
    <div class="alert alert-danger">
        Kullanıcı bulunamadı.
    </div>
}
else
{
    @if (!string.IsNullOrEmpty(Success))
    {
        <div class="alert alert-success mb-4">@Success</div>
    }
    @if (!string.IsNullOrEmpty(Error))
    {
        <div class="alert alert-danger mb-4">@Error</div>
    }

    <div class="content-grid">
        <div class="main-content">
            <!-- User Info Card -->
            <div class="card mb-4">
                <h3 class="card-title">Kullanıcı Bilgileri</h3>
                
                <div class="user-profile">
                    <div class="user-avatar-large">
                        @(user.FullName.Length > 0 ? user.FullName.Substring(0, 1).ToUpper() : "?")
                    </div>
                    <div class="user-details">
                        <h2>@user.FullName</h2>
                        <p>@user.Email</p>
                        <div class="user-badges">
                            @if (user.IsAdmin)
                            {
                                <span class="badge badge-primary">Yönetici</span>
                            }
                            @if (user.IsActive)
                            {
                                <span class="badge badge-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Devre Dışı</span>
                            }
                        </div>
                    </div>
                </div>

                <div class="info-grid">
                    <div class="info-item">
                        <span class="info-label">Kayıt Tarihi</span>
                        <span class="info-value">@user.CreatedAt.ToString("dd.MM.yyyy HH:mm")</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Son Giriş</span>
                        <span class="info-value">
                            @if (user.LastLoginAt.HasValue)
                            {
                                @user.LastLoginAt.Value.ToString("dd.MM.yyyy HH:mm")
                            }
                            else
                            {
                                <text>Hiç giriş yapmadı</text>
                            }
                        </span>
                    </div>
                </div>

                <div class="action-buttons">
                    @if (user.IsActive)
                    {
                        <button class="btn btn-outline btn-danger" @onclick="DeactivateUser">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="10"/>
                                <line x1="15" y1="9" x2="9" y2="15"/>
                                <line x1="9" y1="9" x2="15" y2="15"/>
                            </svg>
                            Devre Dışı Bırak
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-outline btn-success" @onclick="ReactivateUser">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M22 11.08V12a10 10 0 11-5.93-9.14"/>
                                <polyline points="22 4 12 14.01 9 11.01"/>
                            </svg>
                            Aktif Et
                        </button>
                    }
                </div>
            </div>

            <!-- Team Memberships -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Takım Üyelikleri</h3>
                    <button class="btn btn-sm btn-primary" @onclick="() => showAddTeamModal = true">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="12" y1="5" x2="12" y2="19"/>
                            <line x1="5" y1="12" x2="19" y2="12"/>
                        </svg>
                        Takıma Ekle
                    </button>
                </div>

                @if (user.Teams.Any())
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Takım</th>
                                <th>Rol</th>
                                <th>Katılım Tarihi</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var team in user.Teams)
                            {
                                <tr>
                                    <td>
                                        <a href="/teams/@team.TeamId">@team.TeamName</a>
                                    </td>
                                    <td>
                                        <span class="badge badge-secondary">@GetRoleDisplayName(team.Role)</span>
                                    </td>
                                    <td>@team.JoinedAt.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline btn-danger" @onclick="() => RemoveFromTeam(team.TeamId)">
                                            Çıkar
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty-state-small">
                        <p>Bu kullanıcı henüz bir takıma üye değil.</p>
                    </div>
                }
            </div>
        </div>

        <div class="sidebar">
            <!-- Reset Password Card -->
            <div class="card">
                <h3 class="card-title">Şifre Sıfırla</h3>
                <form method="post" action="/api/account/reset-password">
                    <input type="hidden" name="UserId" value="@user.Id" />
                    
                    <div class="form-group">
                        <label class="form-label">Yeni Şifre</label>
                        <input type="password" name="NewPassword" class="form-control" placeholder="••••••••" required />
                    </div>

                    <button type="submit" class="btn btn-outline btn-block">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                            <path d="M7 11V7a5 5 0 0110 0v4"/>
                        </svg>
                        Şifreyi Sıfırla
                    </button>
                </form>
            </div>

            <!-- Toggle Admin Card -->
            <div class="card">
                <h3 class="card-title">Yönetici Yetkisi</h3>
                <p class="text-muted mb-4">
                    @if (user.IsAdmin)
                    {
                        <text>Bu kullanıcı yönetici yetkisine sahip.</text>
                    }
                    else
                    {
                        <text>Bu kullanıcı normal kullanıcı.</text>
                    }
                </p>
                <button class="btn btn-outline btn-block" @onclick="ToggleAdmin">
                    @if (user.IsAdmin)
                    {
                        <text>Yönetici Yetkisini Kaldır</text>
                    }
                    else
                    {
                        <text>Yönetici Yap</text>
                    }
                </button>
            </div>
        </div>
    </div>

    <!-- Add to Team Modal -->
    @if (showAddTeamModal)
    {
        <div class="modal-backdrop" @onclick="() => showAddTeamModal = false">
            <div class="modal" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h3>Takıma Ekle</h3>
                    <button class="modal-close" @onclick="() => showAddTeamModal = false">✕</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="form-label">Takım Seçin</label>
                        <select class="form-control" @bind="selectedTeamId">
                            <option value="">-- Takım Seçin --</option>
                            @foreach (var team in availableTeams)
                            {
                                <option value="@team.Id">@team.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Rol</label>
                        <select class="form-control" @bind="selectedRole">
                            <option value="Member">Üye</option>
                            <option value="Admin">Takım Yöneticisi</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-outline" @onclick="() => showAddTeamModal = false">İptal</button>
                    <button class="btn btn-primary" @onclick="AddToTeam">Ekle</button>
                </div>
            </div>
        </div>
    }
}

