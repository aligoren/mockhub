{
    "info": {
        "name": "E-Commerce API",
        "description": "A sample e-commerce API collection for testing Postman import",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Products",
            "item": [
                {
                    "name": "Get All Products",
                    "request": {
                        "method": "GET",
                        "header": [
                            {"key": "Accept", "value": "application/json"}
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/products",
                            "host": ["{{base_url}}"],
                            "path": ["api", "products"]
                        },
                        "description": "Retrieves all products with optional filtering"
                    },
                    "response": [
                        {
                            "name": "Success",
                            "code": 200,
                            "status": "OK",
                            "body": "[{\"id\": 1, \"name\": \"Laptop\", \"price\": 999.99}]"
                        }
                    ]
                },
                {
                    "name": "Get Product by ID",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/api/products/:id",
                            "host": ["{{base_url}}"],
                            "path": ["api", "products", ":id"]
                        }
                    },
                    "response": [
                        {"name": "Found", "code": 200, "status": "OK"},
                        {"name": "Not Found", "code": 404, "status": "Not Found"}
                    ]
                },
                {
                    "name": "Create Product",
                    "request": {
                        "method": "POST",
                        "header": [
                            {"key": "Content-Type", "value": "application/json"}
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\"name\": \"New Product\", \"price\": 49.99}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/products",
                            "host": ["{{base_url}}"],
                            "path": ["api", "products"]
                        }
                    },
                    "response": [
                        {"name": "Created", "code": 201, "status": "Created"}
                    ]
                }
            ]
        },
        {
            "name": "Orders",
            "item": [
                {
                    "name": "Get Orders",
                    "request": {
                        "method": "GET",
                        "header": [
                            {"key": "Authorization", "value": "Bearer {{token}}"}
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/orders",
                            "host": ["{{base_url}}"],
                            "path": ["api", "orders"]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Create Order",
                    "request": {
                        "method": "POST",
                        "header": [
                            {"key": "Content-Type", "value": "application/json"},
                            {"key": "Authorization", "value": "Bearer {{token}}"}
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\"productId\": 1, \"quantity\": 2}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/orders",
                            "host": ["{{base_url}}"],
                            "path": ["api", "orders"]
                        }
                    },
                    "response": [
                        {"name": "Order Created", "code": 201, "status": "Created"}
                    ]
                },
                {
                    "name": "Cancel Order",
                    "request": {
                        "method": "DELETE",
                        "url": {
                            "raw": "{{base_url}}/api/orders/:orderId",
                            "host": ["{{base_url}}"],
                            "path": ["api", "orders", ":orderId"]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [
                            {"key": "Content-Type", "value": "application/json"}
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\"email\": \"user@example.com\", \"password\": \"secret\"}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/login",
                            "host": ["{{base_url}}"],
                            "path": ["api", "auth", "login"]
                        }
                    },
                    "response": [
                        {"name": "Success", "code": 200, "status": "OK", "body": "{\"token\": \"jwt-token-here\"}"},
                        {"name": "Invalid Credentials", "code": 401, "status": "Unauthorized"}
                    ]
                },
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "body": {
                            "mode": "raw",
                            "raw": "{\"name\": \"John\", \"email\": \"john@example.com\", \"password\": \"secret123\"}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/register",
                            "host": ["{{base_url}}"],
                            "path": ["api", "auth", "register"]
                        }
                    },
                    "response": []
                }
            ]
        }
    ],
    "variable": [
        {"key": "base_url", "value": "http://localhost:3000"},
        {"key": "token", "value": ""}
    ]
}

